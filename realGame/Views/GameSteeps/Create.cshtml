@model realGame.Models.GameSteep

@{
    ViewBag.Title = "Create";
    int gameID = ViewBag.GameID;
    int nextSteepNo = ViewBag.NextSteepNo;
}

<h2>Create</h2>

<script>
   $(document).ready(function () {
      $('#SteepNo').val($('#NextSteepNo').val());
   });
</script>

