@model IEnumerable<realGame.Models.GameSteep>

@{
   int gameID = ViewBag.GameID;
}


<h4>Game steeps</h4>

<div class="row">
   <div class="col-lg-3"></div>
   <div class="col-lg-3"></div>
   <div class="col-lg-3">
      @{
         if (Model != null && Model.Count() > 0)
         {
            <span><strong>ToDo:</strong> Generate game QR codes</span>
         }
      }
   </div>
   <div class="col-lg-3 text-right">
      @Html.ActionLink("Create New", "Create", new { gameID = gameID })
   </div>
    
</div>

@Html.Hidden("GameID", gameID)

@{
   if (Model != null && Model.Count() > 0)
   {
      <table class="table table-hover">
         <tr>
            <th>
               @Html.DisplayNameFor(model => model.SteepNo)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Answer)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.NextPoint)
            </th>
            <th></th>
         </tr>

         @foreach (var item in Model)
         {
            <tr>
               <td>
                  @Html.DisplayFor(modelItem => item.SteepNo)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Description)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Answer)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Question)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.NextPoint)
               </td>
               <td class="text-right">
                  @Html.ActionLink("Edit", "Edit", new { id = item.ID, gameID = item.GameID }) |
                  @Html.ActionLink("Details", "Details", new { id = item.ID, gameID = item.GameID }) |
                  @Html.ActionLink("Delete", "Delete", new { id = item.ID, gameID = item.GameID })
               </td>
            </tr>
         }

      </table>
   }
   else
   {
      <div class="row">
         <strong>No game steeps found</strong>
      </div>
   }
}

